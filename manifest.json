{
  "manifest_version": 3,
  "name": "Gemini Study Buddy",
  "version": "1.0",
  "description": "Your AI-powered study assistant for summarizing webpages and answering questions.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",  
    "storage"      
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}